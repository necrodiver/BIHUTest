                            </div>
                            <div class="column  clock-row clock-mark">说明：xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</div>
                        </div>*@
                    </div>
                </div>
                <div class="clock-bottom">
                    <button class="filtered ui button" v-on:click="editMark(1)">新增</button>
                </div>
                <div></div>
                <div class="field">
                    <div class="column"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!--ui model-->
    <div class="ui small modal" id="editMark">
        <div class="header">
            备注说明
        </div>
        <div class="content ui form">
            <div class="field"><p id="addMark-dayTime"></p></div>
            <div class="field">
                <div class="ui selection dropdown medium Small">
                    <input type="hidden" name="gender" id="selectTimeSlot" />
                    <i class="dropdown icon"></i>
                    <div class="default text">记录时间</div>
                    <div class="menu">
                        <div class="item" data-value="0">整天</div>
                        <div class="item" data-value="1">上午</div>
                        <div class="item" data-value="2">下午</div>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="ui selection dropdown medium Small">
                    <input type="hidden" name="gender" id="selectMarkState" />
                    <i class="dropdown icon"></i>
                    <div class="default text">记录类别</div>
                    <div class="menu" id="markStatusMenu">
