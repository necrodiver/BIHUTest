                        <div class="item" data-value="9">9月</div>
                        <div class="item" data-value="10">10月</div>
                        <div class="item" data-value="11">11月</div>
                        <div class="item" data-value="12">12月</div>
                    </div>
                </div>
                <div class="ui icon input">
                    <input type="text" v-model="userName" placeholder="请输入查询的用户名" maxlength="6">
                    <i class="search icon"></i>
                </div>
            </div>
            <div class="month-content">
                <div class="left length-top">周一</div>
                <div class="left length-top">周二</div>
                <div class="left length-top">周三</div>
                <div class="left length-top">周四</div>
                <div class="left length-top">周五</div>
                <div class="left length-top">周六</div>
                <div class="left length-top">周日</div>
                <div class="body-Day">
                    <div v-for="i in userMounthNullCount" class="left length">无</div>
                    <div v-for="child in userMounths" class="left length clockBtn" v-bind:class="'color-'+child.status" v-on:click="selectMask(child)">
                        <div><strong>{{child.day}}</strong></div>
                        <div v-if="!child.UserLeft&&child.status!=2&&child.status!=0" class="padding-center child-0">早:未打卡</div>
                        <div v-if="child.UserLeft" class="padding-center">
                            <div class="text-right" v-if="child.UserLeft.putCaredTime" v-bind:class="'child-'+child.UserLeft.status">早:{{child.UserLeft.putCaredTime}}</div>
                        </div>
                        <div v-if="!child.UserRight&&child.status!=2&&child.status!=0" class="padding-center child-0">晚:未打卡</div>
                        <div v-if="child.UserRight" class="padding-center">
                            <div class="text-right" v-if="child.UserRight.putCaredTime" v-bind:class="'child-'+child.UserRight.status">晚:{{child.UserRight.putCaredTime}}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="month-content-clock" v-if="showSingleDayRemark">
                <div class="clock-top">
                    <div class="clock-title">备注说明</div>
                    <div class="field column padding-center" v-if="addMarkData.dayTime"><strong>定位日期：{{addMarkData.dayTime}}</strong></div>
                    <div class="clock-content" v-if="addMarkData">
                        <div class="field">
