<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMS - @ViewBag.Title</title>
    @Styles.Render("~/Content/group")
    @Scripts.Render("~/bundles/group")
</head>
<body>
    <div class="ui container">
        <div class="ui menu">
            <a class="header item @ViewBag.Home" href="@Url.Action("Index", "Home")">首页</a>
            <a class="item @ViewBag.AnalysisExcel" href="@Url.Action("Index", "AnalysisExcel")">考勤转换</a>
            <a class="item @ViewBag.AnalysisStatistic" href="@Url.Action("Index", "AnalysisStatistic")">考勤统计</a>
            <div class="ui dropdown item">
                其他
                <i class="dropdown icon"></i>
                <div class="menu">
                    <div class="item">关于</div>
                    <div class="item">版本: v1.5</div>
                </div>
            </div>
            <div class="title-center">
                Attendance Management System(考勤管理系统)
            </div>
            <div class="right menu" id="menu">
                <a class="item active" v-if="!isLogin" id="showLogin" v-on:click="showLogin"><i class="user outline icon"></i></a>
                <div class="ui item top right pointing dropdown" v-if="isLogin" id="loginIn">
                    <i class="user circle icon"></i>
                    <div class="menu">
                        <div class="item" data-value="1"><i class="block layout icon"></i> 个人中心</div>
                        <div class="item" data-value="2"><i class="sign out icon"></i> 退出</div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="modal-page pushable dimmable dimmed">
            @{Html.RenderPartial("PartialViews/SignIn");}
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
